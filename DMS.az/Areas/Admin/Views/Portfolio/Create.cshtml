@using DSM.az.Areas.Admin.ViewModels.Portfolio
@model PortfolioCreateVM

<div class="main-panel">
    <div class="">
        <div class="card-body">
            <h4 class="card-title">Portfolio Create</h4>


            <form class="forms-sample" enctype="multipart/form-data" asp-action="create" asp-controller="Portfolio" method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input asp-for="Photo" class="form-control imgInput" placeholder="Link" />
                    <span asp-validation-for="Photo"></span>

                    <div id="imgPreview" class="mt-1"></div>
                </div>

                <div class="form-group">
                    <label asp-for="RedirectLink"></label>
                    <input asp-for="RedirectLink" type="text" class="form-control" id="exampleInputName1" placeholder="Title" />
                    <span asp-validation-for="RedirectLink"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2"> Create </button>
                <a asp-action="index" asp-controller="portfolio" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>


@section scripts{
    @await Html.PartialAsync("_ImgUploadPartial")
}