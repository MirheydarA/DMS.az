@using DSM.az.Areas.Admin.ViewModels.Slider
@using DSM.az.Enums;
@model SliderUpdateVM

<div class="main-panel">
    <div class="">
        <div class="card-body">
            <h4 class="card-title">Slider Update</h4>


            <form class="forms-sample" enctype="multipart/form-data" asp-action="update" asp-controller="slider" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputName1" placeholder="Title" />
                    <span asp-validation-for="Title"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Type">Large select</label>
                    <select asp-for="Type" asp-items="@Html.GetEnumSelectList<SliderContentType>()" class="form-control form-control-lg" id="exampleFormControlSelect1">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Type"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MediaName">File upload</label>
                    @*<input asp-for="MediaName" type="file" class="file-upload-default" />
                    <div class="input-group col-xs-12">
                    <input asp-for="MediaName" class="form-control file-upload-info" type="text" placeholder="Upload File" />
                    <span class="input-group-append">
                    <button class="file-upload-browse btn btn-primary" type="button"> Upload </button>
                    </span>
                    </div>*@
                    <input asp-for="MediaName" class="form-control file-upload-info" placeholder="Upload File" />
                    <span asp-validation-for="MediaName"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2"> Update </button>
                <button asp-action="index" asp-controller="slider" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
