@using DSM.az.Areas.Admin.ViewModels.Slider
@model SliderIndexVM

<div class="card-body">
    <h4 class="card-title">Basic Table</h4>
    <p class="card-description">
        Add class <code>.table</code>
    </p>

    <a class="btn btn-info mb-3" asp-action="Create" asp-controller="slider">Create</a>


    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.Sliders is not null)
                {
                    @foreach (var item in Model.Sliders)
                    {
                        <tr>
                            @if (item.Type.ToString() == "Video")
                            {
                                <td>
                                    <video width="160" height="80" controls>
                                        <source src="~/Users/images/@item.MediaPath" type="video/mp4">
                                        @*<source src="movie.ogg" type="video/ogg">*@
                                        Your browser does not support the video tag.
                                    </video>
                                </td>
                            }
                            else
                            {
                                <td class="py-1"><img src="~/Users/images/@item.MediaPath" alt="image"/></td>
                            }
                            <td>@item.Title</td>
                            <td>
                                @if (!item.IsDeleted)
                                {
                                    <span class="text-success">Active</span>
                                }
                                else
                                {
                                    <span class="text-danger">Non-Active</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Update" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-primary"><i class="mdi mdi-pencil"></i></a>
                                <a asp-action="Delete" asp-controller="slider" asp-route-id="@item.Id" class="btn btn-danger btn-delete"> <i class="mdi mdi-delete"></i> </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div>
</div>
